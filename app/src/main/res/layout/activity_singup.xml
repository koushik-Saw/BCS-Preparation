<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center"
        tools:context=".view.authentication.Singup">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/circulaavater"
            android:layout_marginBottom="20dp"
            android:visibility="gone" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/etsignupname"
            android:hint="Enter Name"
            android:padding="5dp"
            android:inputType="text"
            android:background="@drawable/textfield_border"
            android:layout_marginBottom="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/etsignupphone"
            android:hint="Enter Phone"
            android:padding="5dp"
            android:inputType="text"
            android:background="@drawable/textfield_border"
            android:layout_marginBottom="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/etsignuppass"
            android:hint="Enter Password"
            android:padding="5dp"
            android:inputType="textPassword"
            android:background="@drawable/textfield_border"
            android:layout_marginBottom="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/etsignupconpass"
            android:hint="Confirm Password"
            android:padding="5dp"
            android:inputType="textPassword"
            android:background="@drawable/textfield_border"
            android:layout_marginBottom="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/etsignupbtn"
            android:text="SignUp"
            android:background="@drawable/button_border"
            android:layout_marginBottom="10dp" />
    </LinearLayout>
</layout>