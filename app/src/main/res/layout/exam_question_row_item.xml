<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="option"
            type="com.example.bcs_preparation.model.ExamQuestionModel.Question__1" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">


                <TextView
                    android:id="@+id/examOptionNameRowItemID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Banglar tin jug"
                    android:text="@{option.subject}"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_weight="2"
                    android:textSize="18sp"/>

                <ImageView
                    android:id="@+id/examOptionIVRowItemID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/badge"
                    android:layout_gravity="right"
                    android:layout_weight="0.5"
                    android:layout_margin="5dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A. "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nestedExamQuestionOp1TVRowItemID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="26th March"
                    android:text="@{option.option1}"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/nestedExamQuestionOp1IVRowItemID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_done_24"
                    android:layout_marginLeft="20dp"
                    android:visibility="gone"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B. "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nestedExamQuestionOp2TVRowItemID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="26th March"
                    android:text="@{option.option2}"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/nestedExamQuestionOp2IVRowItemID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_done_24"
                    android:layout_marginLeft="20dp"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C. "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nestedExamQuestionOp3TVRowItemID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="26th March"
                    android:text="@{option.option3}"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/nestedExamQuestionOp3IVRowItemID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_done_24"
                    android:layout_marginLeft="20dp"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D. "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nestedExamQuestionOp4TVRowItemID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="26th March"
                    android:text="@{option.option4}"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/nestedExamQuestionOp4IVRowItemID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_done_24"
                    android:layout_marginLeft="20dp"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/nestedExamQuestionExplanationBTNRowItem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ব্যাখ্যা"
                    android:textStyle="bold"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="কমেন্ট করুন"
                    android:textStyle="bold"/>

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>
</layout>